<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.spa.controller.LoginController">
    <children>
        <VBox alignment="CENTER" spacing="10.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <Label text="Iniciar Sesión" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <TextField fx:id="emailField" promptText="Correo Electrónico" />
            <PasswordField fx:id="passwordField" promptText="Contraseña" />

            <HBox spacing="10">
                <Button text="Login" onAction="#onLogin" />
                <Button text="Registrar Profesional" onAction="#abrirRegistroProfesional" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
